<form
    method="post"
    action="{{ admin_path('app_snippet_delete', {id: snippet.id}) }}"
    onsubmit="return confirm('Are you sure you want to delete this item?');"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ snippet.id) }}"
    >
    <button class="btn">Delete</button>
</form>
